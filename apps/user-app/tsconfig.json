{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    "types/**/*.ts", // for additional types
    ".next/types/**/*.ts",
    "pages/404.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
